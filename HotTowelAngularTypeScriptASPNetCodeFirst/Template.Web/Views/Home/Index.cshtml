@section scripts {
    <script>@* Server config to inject into client code *@
        window.appConfig = {
            remoteServiceRoot: "@Url.Content("~/api/")",
            version: "@(VersionHelper.Version)"
        };
    </script>
    @Scripts.Render("~/app")
}

<div>
    <div ng-include="'/app/layout/shell.html?v=@(VersionHelper.Version)'"></div>
    <div id="splash-page" ng-show="false" class="dissolve-animation">
        <div class="page-splash">
            <div class="page-splash-message">
                Proverb
            </div>

            <div class="progress">
                <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: 20%;">
                    <span class="sr-only">loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>